<main class="user-form">

  <h2 class="user-title">Log In:</h2>

  <% if flash[:error] %>
    <div class="error">
      <%= flash[:error] %>
    </div>
  <% end %>

  <%= form_tag "/session" do %>
    <%= label_tag :email %>
    <%= email_field_tag :email %><br/>

    <%= label_tag :password %>
    <%= password_field_tag :password %>
    
    <%= submit_tag "Log in" %>
  <% end %>
</main>